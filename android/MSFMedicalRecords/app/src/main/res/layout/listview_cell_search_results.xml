<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp">

    <View
        android:id="@+id/listview_cell_search_results_color_indicator"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/listview_cell_search_results_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gil Julio"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/listview_cell_search_results_color_indicator"
        android:layout_toStartOf="@+id/listview_cell_search_results_color_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="HG78190"
        android:id="@+id/textView2"
        android:layout_below="@+id/listview_cell_search_results_name"
        android:layout_alignLeft="@+id/listview_cell_search_results_name"
        android:layout_alignStart="@+id/listview_cell_search_results_name"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tent 3, bed 127"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="20dp" />
</RelativeLayout>